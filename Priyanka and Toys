#include <iostream>
#include <vector>
#include <algorithm>

int toys(std::vector<int> w) {
    if (w.empty()) {
        return 0;
    }
    std::sort(w.begin(), w.end());
    int containers = 1;
    int min_weight = w[0];
    for (size_t i = 1; i < w.size(); ++i) {
        if (w[i] > min_weight + 4) {
            containers++;
            min_weight = w[i];
        }
    }
    return containers;
}

int main() {
    int n;
    std::cin >> n;
    std::vector<int> w(n);
    for (int i = 0; i < n; ++i) {
        std::cin >> w[i];
    }
    int result = toys(w);
    std::cout << result << std::endl;
    return 0;
}
